<div class="wrapper">
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user form-signin', local: true do |f| %>
  <ul class="mb-3 pb-3" style="border-bottom: 1px solid #dee2e6;">
    <li class="text-center"><%= render "user/users/shared/error_messages", resource: resource %></li>
  </ul>
    <p class="form-signin-heading">アカウントをお持ちの方はこちら</p>
    <div class="div-bottom">
      <%= link_to"ログイン", new_user_session_path, class: "log log-in btn btn-lg btn-block"  %>
    </div>
    <hr class="colorgraph"><br>
    <div><%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "名前"  %></div>
    <div><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %></div>
    <div><%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(6文字以上)" %></div>
    <div><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(確認用)"  %></div>
    <div class="actions div-bottom"><%= f.submit "登録", class: "btn btn-lg btn-primary btn-block" %></div>
    <div class="mt-2">
    <%= link_to new_admin_session_path, class: "text-primary mt-2" do  %>
      <p class="form-signin-heading admin-log-here">管理者のログインはこちら<i class="fas fa-sign-in-alt"></i></p>
    <% end %>
    </div>
	<% end %>
</div>