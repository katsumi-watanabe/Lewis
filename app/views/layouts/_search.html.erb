<% if user_signed_in? %>
  <%= form_with url: post_sneakers_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content,class: "form-control mr-sm-2" %>
    <%= f.submit '検索', class: "sbtn btn-6 my-2" %>
    <% end %>
<% elsif admin_signed_in? %>
  <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content,class: "form-control mr-sm-2" %>
    <%= f.select :model, options_for_select({ "Customer" => "customer", "Product" => "product" }), class: "dropdown-item" %>
    <%= f.submit '検索', class: "sbtn btn-6 my-2" %>
  <% end %>
<% else %>
<% end %>