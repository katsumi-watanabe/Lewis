<div class="sneaker-width">
  <div class="row" style="justify-content: center;">
    <div class="col-12 col-md-3 text-center mb-3">
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "pagu.jpeg", class: "comment-user-image-2" %>
    </div>
    <div class="edit-box-1 col-12 col-md-7">
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch, class: "edit-form", local: true do |f| %>
      <div class="row mb-4 user-id">
        <p class="col-12 col-sm-12 col-md-6">ユーザーID</p>
        <p class="col-12 col-sm-12 col-md-6"><%= @user.id %></p>
      </div>
      <div class="row mb-4">
        <p class="col-12 col-sm-12 col-md-6">ユーザー名</p>
        <%= f.text_field :name, class: "text-field col-11 col-sm-11 col-md-6 col-lg-5", style: "margin-bottom: 0;" %>
      </div>
      <div class="row mb-4">
        <p class="col-12 col-sm-12 col-md-6" style="font-size: 90%;">ユーザーメールアドレス</p>
        <%= f.text_field :email, class: "text-field col-11 col-sm-11 col-md-6 col-lg-5", style: "margin-bottom: 0;" %>
      </div>
      <div class="row mb-4">
        <p class="col-12 col-sm-12 col-md-6">ユーザーステータス</p>
          <div class="col-12 col-sm-12 col-md-6">
            <div class="row mb-4">
              <div class="col-4 col-sm-4 col-md-4 p-0">
                <%= f.radio_button :is_deleted, false %>
                <%= f.label :is_deleted, "有効", value: :true, class: "mr-3" %>
              </div>
              <div class="col-4 col-sm-4 col-md-4 p-0">
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, "退会", value: :false %>
              </div>
            </div>
          </div>
        </div>
        <div class="user-edit-btn">
        <%= f.submit '編集', class: "btn btn-success btn-1" %>
        </div>
      <% end %>
      </div>

    </div>
  </div>
</div>

