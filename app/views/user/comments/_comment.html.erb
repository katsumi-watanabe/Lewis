<% post_sneaker.comments.each do |comment| %>
<div class="comment-field">
  <div class="ml-3">
    <div class="row" style="justify-content: flex-start;">
    <%= link_to user_detail_path(comment.user), class: "font-weight-bold d-flex" do %>
      <%= attachment_image_tag comment.user, :profile_image, format: 'jpeg', fallback: "no_image.png", class: "ml-2 comment-user-image-1" %>
      <p class="ml-3"><%= comment.user.name %>さん</p>
      <div class="d-flex">
        <% if comment.user == current_user %>
        <p class="mx-2">
          <%= link_to "編集", edit_post_sneaker_comment_path(comment.post_sneaker, comment), remote: true, class: "btn btn-success comment-btn  btn-1" %>
        </p>
        <p>
          <%= link_to "削除", post_sneaker_comment_path(comment.post_sneaker, comment), method: :delete, remote: true, class: "btn btn-danger comment-btn  btn-1", data: { confirm: "本当に消しますか？" } %>
        </p>
        <% end %>
      </div>
    <% end %>
    </div>
    <div class="col-12 p-0 mt-2">
      <p class="create-day mt-1 comment-text-size">
        <%= comment.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[comment.created_at.wday]})") %>
      </p>
    </div>
  </div>


</div>
<div class="my-3">
  <div class="text-left media media-chat p-0">
    <div class="media-body">
      <p class="comment-text mb-2"><%= comment.comment %></p>
    </div>
  </div>
</div>
<% end %>