<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <h2>パスワードをお忘れですか？</h2>
  <div class="mb-3"><%= render "devise/shared/error_messages", resource: resource %></div>
  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス"  %>
  </div>
  <div class="actions text-center div-bottom" style="width: 100%;">
    <%= f.submit "パスワードのリセット", class: "logs btn btn-lg btn-outline-dark", style: "width: 100%;" %>
  </div>
  <div class="div-bottom">
    <%= link_to"ログイン", new_user_session_path, class: "log log-in btn btn-lg btn-block"  %>
  </div>
  <div class="div-bottom">
    <%= link_to"新規登録", new_user_registration_path,class: "btn btn-lg btn-primary btn-block"  %>
  </div>
	<% end %>
</div>