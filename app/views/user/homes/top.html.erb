<div class="text-center">
  <div class="top-image">
    <div class="top-image-box">
      <div class="top-text box">
        <h1 class="top-text box-1">Lewis</h1>
        <p><%= link_to"今すぐ投稿する", new_post_sneaker_path, class: "top-text box-2 btn btn-outline-light" %></p>
      </div>
    </div>
  </div>

  <div id="top", class="my-5 top-box flex-sm-row">
    <%= form_with url: search_path, method: :get, class: "top-nav-list", local: true do |f| %>
    <%= f.hidden_field :keyword %>
    <%= f.hidden_field :type, value: 0 %>
    <%= f.submit "Total", class: "active flex-sm-fill text-sm-center nav-link nav-list col-sm-12" %>
    <% end %>

    <%= form_with url: search_path, method: :get, class: "top-nav-list", local: true do |f| %>
    <%= f.hidden_field :keyword, value: 0 %>
    <%= f.hidden_field :type, value: 0 %>
    <%= f.submit "Men's", class: "active flex-sm-fill text-sm-center nav-link nav-list" %>
    <% end %>

    <%= form_with url: search_path, method: :get, class: "top-nav-list", local: true do |f| %>
    <%= f.hidden_field :keyword, value: 1 %>
    <%= f.hidden_field :type, value: 0 %>
    <%= f.submit "Women's", class: "active flex-sm-fill text-sm-center nav-link nav-list" %>
    <% end %>
  </div>

  <div>
    <% @post_sneakers.each do |post_sneaker| %>
      <%= link_to post_sneaker_path(post_sneaker) do %>
      <%= attachment_image_tag post_sneaker, :post_image, :fill, 300, 300, format: 'jpeg', class: "col-md-3 col-sm-5 m-2 p-0" %>
      <% end %>
    <% end %>
  </div>
</div>