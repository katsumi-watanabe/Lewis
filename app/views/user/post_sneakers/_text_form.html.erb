  <%= form_with model: @post_sneaker, local: true do |f| %>
  <div class="row" style="justify-content: center;">
    <div class="div-bottom col-12 col-sm-10 col-md-7">
      <%= f.text_field :sneakers_name, class: "text-field", placeholder: "スニーカー名前" %>
    </div>
    
    <!--画像が選択されている場合は非表示-->
    <% if @post_sneaker.post_image.nil? %>
    <div class="div-bottom col-12 col-sm-10 col-md-7">
      <label for="image">
        <span class="button">画像を選択</span><%= f.attachment_field :post_image, id: "image" %>
      </label>
      <!--写真の名前-->
      <div id="file-name"></div>
    </div>
    <% end %>

    <div class="div-bottom col-12 col-sm-10 col-md-7">
      <%= f.radio_button :gender_selection, :"Men's", checked: "checked" %>
      <%= f.label :gender_selection, "Men's" %>
      <%= f.radio_button :gender_selection, :"Women's" %>
      <%= f.label :gender_selection, "Women's" %>
    </div>

    <div class="div-bottom col-12 col-sm-10 col-md-7">
      <%= f.text_area :caption, class: "text-area", placeholder: "キャプション"  %>
    </div>
    <div class="text-center col-12 col-sm-10 col-md-7">
      <% if post_sneaker.created_at %>
        <%= f.submit '保存', class: "btn btn-radius-solid" %>
      <% else %>
        <%= f.submit '投稿', class: "btn btn-radius-solid" %>
      <% end %>
    </div>
  </div>
  <% end %>