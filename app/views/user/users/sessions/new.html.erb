<% if !admin_signed_in? %>
<div class="wrapper">
  <%= form_with model: @user, url: user_session_path, class: "form-signin", local: true do |f| %>
    <p class="form-signin-heading">アカウントをお持ちでない方はこちら</p>
    <div class="div-bottom">
      <%= link_to"新規登録", new_user_registration_path,class: "btn btn-lg btn-primary btn-block"  %>
    </div>
    <div class="div-bottom">
      <%= link_to"ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btn-lg btn-block gest-log"  %>
    </div>
    <hr class="colorgraph"><br>
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス"  %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード"  %>
    </div>
    <div class="actions div-bottom">
      <%= f.submit "ログイン", class: "log log-in btn btn-lg btn-block" %>
    </div>
    <div class="mt-2">
      <%= link_to new_admin_session_path, class: "text-primary mt-2" do  %>
        <p class="form-signin-heading admin-log-here">管理者のログインはこちら<i class="fas fa-sign-in-alt"></i></p>
      <% end %>
        <p class="form-signin-heading"><%= render "user/users/shared/links" %></p>
    </div>
	<% end %>
</div>
<% else %>
  <div>
    <p class="text-center mt-5">管理者のサインアウトをお願いします</p>
  </div>
<% end %>