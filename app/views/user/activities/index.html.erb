<div class="sneaker-width-1">
  <h2>通知一覧</h2>

  <% if @activities.present? %>
    <% @activities.each do |activity| %>
      <div class="text-center">
        <%= render "#{activity.action_type}", activity: activity %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center">
      お知らせはありません
    </div>
  <% end %>
</div>