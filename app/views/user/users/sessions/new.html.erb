<div class="sneaker-1">
<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <p  class="div-bottom">アカウントをお持ちでない方はこちら</p>

  <div class="div-bottom">
  <%= link_to new_user_registration_path do %>
    <p class="log-btn log">新規登録</p>
  <% end %>
  </div>

  <div class="div-bottom">
  <%= link_to users_guest_sign_in_path, method: :post do %>
    <p class="log-btn gest-log">ゲストログイン</p>
  <% end %>
  </div>

  <div class="div-bottom underline">
  </div>

  <div class="div-bottom">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "log", placeholder: "メールアドレス"  %>
  </div>

  <div class="div-bottom">
    <%= f.password_field :password, autocomplete: "current-password", class: "log", placeholder: "パスワード"  %>
  </div>

  <%# if devise_mapping.rememberable? %>
  <!--  <div class="div-bottom">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
  <!--  </div>-->
  <%# end %>

  <div class="actions div-bottom">
    <%= f.submit "ログイン", class: "log log-btn log-in" %>
  </div>
<% end %>

  <div class="mt-2">
    <%= link_to new_admin_session_path, class: "text-primary mt-2" do  %>
    <p>管理者のログインはこちら<i class="fas fa-sign-in-alt"></i></p>
    <% end %>
    <%= render "user/users/shared/links" %>
  </div>
</div>