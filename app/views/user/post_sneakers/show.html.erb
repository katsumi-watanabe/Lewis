<div class="post_sneaker_show">
  <h2 class="text-center mb-5 font-weight-bold">
    <%= @post_sneaker.sneakers_name %>
  </h2>

  <div>
    <div class="d-flex">
      <div class="show-width">
        <%= attachment_image_tag @post_sneaker, :post_image, :fill, 600, 600, format: 'jpeg', class: "sneaker_image" %>
      </div>

      <div class="show-width ml-4">
        <div>
          <span class="font-weight-bold">
            <%= link_to user_detail_path(@user) do %>
            <%= @user.name %>さん
            <% end %>
            </span>
          /
          <%= @post_sneaker.gender_selection %>
        </div>

        <!----いいねrender/フォローrender---->
        <div class="submit">
          <%= render 'like', post_sneaker: @post_sneaker %>
          <%= render 'follow', user: @user %>
        </div>
        <p class="like-count mb-2"><span class="man-count"><%= @post_sneaker.likes.count %></span>人がいいねといっています</p>

        <div class="caption">
          <%= @post_sneaker.caption %>
        </div>
        <div class="btn-bottom">
          <% if @post_sneaker.user == current_user %>
          <%= link_to "編集", edit_post_sneaker_path(id: @post_sneaker.id), class: "btn btn-success btn-1" %>
          <%= link_to "削除", post_sneaker_path(@post_sneaker), method: :delete, class: "btn btn-danger btn-1", data: { confirm: "本当に消しますか？" } %>
          <% end %>
        </div>
      </div>
      
    </div>
  </div>

  <h2 class="text-center comment-box">
    コメント
  </h2>
  <div>
    <div>
    <% @post_sneaker.comments.each do |comment| %>
      <div class="d-flex comment-field">
        <p class="mr-2">
          <%= link_to user_detail_path(comment.user), class: "font-weight-bold" do %>
          <%= attachment_image_tag comment.user, :profile_image, format: 'jpeg', fallback: "pagu.jpeg", class: "comment-user-image-1" %>
        </p>
        <p class="mr-2 font-weight-bold">
          <%= comment.user.name %>さん
          <% end %>
        </p>
        <p class="mr-2">
          (<%= comment.post_sneaker.gender_selection %>)
        </p>

        <% if comment.user == current_user %>
          <p class="mr-2">
            <%= link_to "編集", edit_post_sneaker_comment_path(comment.post_sneaker, comment), class: "btn btn-success comment-btn  btn-1", remote: true %>
          </p>
          <p>
            <%= link_to "削除", post_sneaker_comment_path(comment.post_sneaker, comment), method: :delete, class: "btn btn-danger comment-btn  btn-1", data: { confirm: "本当に消しますか？" } %>
          </p>
        <% end %>
        <p class="create-day">
          <%= comment.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[comment.created_at.wday]})") %>
        </p>
      </div>
      <div class="mt-3 mb-5 comment-text-size">
        <%= comment.comment %>
      </div>
    <% end %>
    </div>

    <div id="comment-form">
      <%= render partial: "form", locals: { post_sneaker: @post_sneaker, comment: @comment } %>
    </div>


  </div>
</div>