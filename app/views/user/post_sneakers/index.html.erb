<div class="post_sneaker_index">

  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= form_with url: post_sneakers_search_path, method: :get, local: true do |f| %>
      <%= f.hidden_field :keyword %>
      <%= f.hidden_field :type, value: 0 %>
      <%= f.submit "Total", class: "nav-link active" %>
      <% end %>
    </li>
    <li class="nav-item">
      <%= form_with url: post_sneakers_search_path, method: :get, local: true do |f| %>
      <%= f.hidden_field :keyword, value: 0 %>
      <%= f.hidden_field :type, value: 0 %>
      <%= f.submit "Men's", class: "nav-link active" %>
      <% end %>
    </li>
    <li class="nav-item">
      <%= form_with url: post_sneakers_search_path, method: :get, local: true do |f| %>
      <%= f.hidden_field :keyword, value: 1 %>
      <%= f.hidden_field :type, value: 0 %>
      <%= f.submit "Women's", class: "nav-link active" %>
      <% end %>
    </li>
    </ul>

  <div class="text-right mr-5 mb-2 font-weight-bold ">
    並び替え
  </div>

  <div class="text-right mr-5">
    <%= form_with url: post_sneakers_search_path, method: :get, local: true do |f| %>
     <%= f.select :type, [["新着順", "new"], ["いいね順", "likes"]] %>
     <%= f.submit '並び替え'%>
  <% end %>
  </div>

  <div class="tab-content sneaker_image_index" id="nav-tabContent">
    <% @post_sneakers.each do |post_sneaker| %>
    <%= link_to post_sneaker_path(post_sneaker.id) do %>
      <%= attachment_image_tag post_sneaker, :post_image, :fill, 300, 300, format: 'jpeg', class: "sneaker-image" %>
    <% end %>
  <% end %>
  </div>
</div>