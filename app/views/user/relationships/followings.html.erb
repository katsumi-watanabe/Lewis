<div class="sneaker text-center">

  <h2 class="font-weight-bold mb-5">ユーザー一覧</h2>
  <% if @users.present? %>
  <table class="table">
    <thead class="thead">
      <tr>
        <th>フォローユーザー名</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.png", class: "comment-user-image-4" %>
          <%= link_to user_detail_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <p>フォローしているユーザーはいません</p>
  <% end %>
</div>

<div class="text-center mt-5" style="justify-content: center;">
  <%= paginate @users %>
</div>