<div class="sneaker-width">
  <div class="edit d-flex">
    <div class="edit-box">
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "pagu.jpeg", class: "comment-user-image-2" %>
    </div>
    <div class="edit-box-1">
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch, class: "edit-form", local: true do |f| %>
      <div class="d-flex">
        <p>ユーザーID</p>
        <p><%= @user.id %></p>
      </div>
      <div class="d-flex">
        <p>ユーザー名</p>
        <%= f.text_field :name, class: "text-field" %>
      </div>
      <div class="d-flex">
        <p>ユーザーメールアドレス</p>
        <%= f.text_field :email, class: "text-field" %>
      </div>
      <div class="d-flex">
        <p>ユーザーステータス</p>
        <div>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効", value: :true, class: "mr-3" %>
        </div>
        <div>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会", value: :false %>
        </div>
      </div>
      <%= f.submit '編集', class: "btn btn-success btn-1" %>
    <% end %>
    </div>
  </div>
</div>

