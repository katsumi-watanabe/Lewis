<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", relationship_path(user.id), method: :delete, remote: true, class: "red btn btn-2" %>
  <% else %>
    <%= link_to "フォロー", relationships_path(user.id), method: :post, remote: true, class: "blue btn btn-2" %>
  <% end %>
<% end %>